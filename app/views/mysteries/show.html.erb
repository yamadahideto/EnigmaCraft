<h1> <%= t('.title') %>  </h1>
<div class = "w-1/3 mx-auto">
    <%= link_to t('helpers.link.back'), mysteries_path %>
    <%= link_to t('helpers.link.edit'), edit_mystery_path(@mystery) %>
    <%= link_to t('helpers.link.delete'), mystery_path(@mystery), data: { turbo_method: :delete } %>
  <div class="bg-amber-700 rounded px-4 py-2">
    <div class="flex flex-col">
      <div class="mb-4">
        <p> <%= t('helpers.title') %>: </p>
            <%= @mystery.title %>
      </div>
      <div class="mb-4">
        <p> <%= t('helpers.mystery_type') %>: </p>
            <%= @mystery.mystery_type %>
      </div>
      <div class="mb-4">
         <p> <%= t('helpers.content') %>: </p>
          <%= @mystery.content %>
      </div>
      <div class="mb-4">
         <p> <%= t('helpers.correct_answer') %>: </p>
          <%= @mystery.correct_answer %>
      </div>   
    </div>
  </div>
</div>