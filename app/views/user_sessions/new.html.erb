<div class = "w-1/2 mx-auto">
  <div class="bg-header shadow-xl rounded px-7 py-5 pb-5 my-20">
    <h1 class = "text-center text-3xl font-zen-old-mincho text-white mb-7">
      <%= t('.title') %>
    </h1>
    <div class = "flex flex-col">
      <div class = "mx-auto">
        <%= link_to auth_at_provider_path(provider: :google), class: 'text-center mx-auto my-5' do %>
          <%= image_tag 'google_signin.png' %>
        <% end %>
      </div>
      <div class = "mx-auto">
        <%= link_to guestlogin_path, data: {turbo_method: :post} do %>
          <button class="btn bg-buttonColor text-white mx-auto my-6">ゲストログイン</button>
        <% end %>
      </div>
    </div>
  </div>
</div>